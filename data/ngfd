start on started hildon-desktop
stop on stopped dbus

console output

script
	echo "Starting ngfd"

	USER=`whoami`

	if [ "x$USER" = "xroot" ];
	then
		source /tmp/session_bus_address.user
		source /tmp/dbus_session_bus.pid.user
	else
		source /tmp/session_bus_address.$USER
		source /tmp/dbus_session_bus.pid.$USER
	fi

	exec /usr/bin/ngfd
end script

respawn
